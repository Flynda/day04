<div class="row">
    <div class="col">

        <form method="POST" action="/">

            <div class="form-group">
                <label for="item">Item</label>
                <input type="text" name="item" id="item" class="form-control" placeholder="Please select an item" required>
            </div>

            <div class="form-group">
                <label for="qty">Quantity</label>
                <input type="number" name="qty" id="qty" class="form-control" min="1" placeholder="Please enter a number" required>
            </div>

            <div class="input-group">
                <label for="unitPrice">Unit</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" name="unitPrice" id="unitPrice" class="form-control" pleaceholder="Cost per unit item" required>
                </div>
            </div>

            <div class="mt-2 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary btn-lg active">Add to Cart</button>
            </div>

            <input type="hidden" name="cartState" value="{{cartState}}">

        </form>
    </div>

    <div class="col">
        <table class="table mt-2">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Unit Price</th>
                </tr>
            </thead>
            <tbody>
                {{#if hasContent}}
                    {{#each cart}}
                    <tr>
                        <td>{{this.item}}</td>
                        <td>{{this.qty}}</td>
                        <td>${{this.unitPrice}}</td>
                    </tr>
                    {{/each}}
                {{else}}
                <tr>
                    <td>Your cart is empty</td>
                </tr>
                {{/if}}
            </tbody>
        </table>
    </div>
</div>